<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_less_bg">

    <include
        android:id="@+id/title"
        layout="@layout/include_title_l1" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginStart="34dp"
        android:background="@color/ver_line_color" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="24dp"
                android:lineSpacingExtra="5dp"
                android:text="节能环保是奥的斯始终履行的社会责任，奥的斯机电19年卖出的无机房电梯与传统非能源再生电梯相比，每年节能约1395万度，约减少1.39万吨的二氧化碳排放，相当于40公顷森林1年的二氧化碳吸收量。"
                android:textColor="#444444"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:lineSpacingExtra="5dp"
                android:text="采用低功耗的LED轿内照明，轿内风扇照明智能控制，减小空梯时电能损耗。"
                android:textColor="#444444"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="28dp"
                android:lineSpacingExtra="5dp"
                android:text="整体符合TÜV认证A级能效。"
                android:textColor="#444444"
                android:textSize="13sp" />

            <include layout="@layout/include_aeeb_spare_center" />

            <include layout="@layout/include_aeeb_spare_bottom" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>


