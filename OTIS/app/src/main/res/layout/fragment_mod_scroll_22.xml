<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <include
        layout="@layout/include_scroll_label"
        android:layout_width="match_parent"
        android:layout_height="31.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78.5dp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/mod_scroll_point1"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="保留原梯部件"
            android:textColor="#666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:drawableStart="@drawable/mod_scroll_point2"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="更换新梯部件"
            android:textColor="#666"
            android:textSize="11sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/mod_scroll_big1" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="137dp"
        android:layout_below="@id/iv_big"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDED6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16.5dp"
                android:paddingTop="16dp"
                android:paddingEnd="20dp">

                <TextView
                    style="@style/title_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优势"
                    android:textColor="#BB9455"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_good1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:drawableStart="@drawable/splash_black_circle_3"
                    android:drawablePadding="5dp"
                    android:text="原建筑装潢影响小"
                    android:textColor="@color/black_141A29"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_good2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/splash_black_circle_3"
                    android:drawablePadding="5dp"
                    android:text="原建筑装潢影响小"
                    android:textColor="@color/black_141A29"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_good3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/splash_black_circle_3"
                    android:drawablePadding="5dp"
                    android:text="原建筑装潢影响小"
                    android:textColor="@color/black_141A29"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="18.5dp"
                android:background="#20000000"
                android:layout_marginBottom="18.5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16.5dp"
                android:paddingTop="16dp"
                android:paddingEnd="20dp">

                <TextView
                    style="@style/title_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="劣势"
                    android:textColor="#BB9455"
                    android:textSize="16sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/splash_black_circle_3"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_bad1"
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="需要地质监局确认可以"
                        android:textColor="@color/black_141A29"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_bad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/splash_black_circle_3"
                    android:drawablePadding="5dp"
                    android:text="门厅滑块支架非标"
                    android:textColor="@color/black_141A29"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_bad3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/splash_black_circle_3"
                    android:drawablePadding="5dp"
                    android:text="适用性差"
                    android:textColor="@color/black_141A29"
                    android:textSize="11sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>