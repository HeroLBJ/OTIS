<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_root"
    android:paddingBottom="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51.5dp"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp">

        <RelativeLayout
            android:layout_width="304dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/shape_health_banner_line" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.5dp"
        android:elevation="@dimen/dp_10">

        <View
            android:layout_width="304dp"
            android:layout_height="20.5dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/shape_aeeb_spare_bottom_black"
            android:elevation="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_no"
            style="@style/title_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="164dp"
            android:elevation="20dp"
            android:text="1F"
            android:textColor="@color/text_color_select"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="14.5dp"
            android:elevation="20dp"
            android:text="强大的后台支持"
            android:textColor="@color/text_color_select"
            android:textSize="23sp" />
    </RelativeLayout>

</RelativeLayout>