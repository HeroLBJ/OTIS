<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootView"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="412.5dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp">

        <RelativeLayout
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="77.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black_141A29">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/title_bold"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/res_top_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="27dp"
                    android:text="外观的美"
                    android:textColor="#C79D5B"
                    android:textSize="20sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_bg"
                android:transitionName="action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rl_bottom" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/shape_health_banner_line" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>