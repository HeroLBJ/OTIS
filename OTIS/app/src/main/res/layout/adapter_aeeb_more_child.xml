<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="412.5dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_141A29" />

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="97.5dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/title_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="23dp"
                    android:drawableStart="@drawable/res_top_bottom"
                    android:drawablePadding="5dp"
                    android:text="外观的美"
                    android:textColor="#C79D5B"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    style="@style/title_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="可适配大部分建筑类型"
                    android:textColor="#666"
                    android:textSize="12sp" />
            </RelativeLayout>

            <com.bocweb.otis.util.ui.RadiusCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rl_bottom"
                app:rcv_bottomLeftRadius="@dimen/dp_10"
                app:rcv_topLeftRadius="@dimen/dp_10"
                app:rcv_topRightRadius="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="316dp"
                    android:background="#f00" />

            </com.bocweb.otis.util.ui.RadiusCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/shape_health_banner_line" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_no"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_launcher_background"
        android:elevation="20dp" />


</RelativeLayout>