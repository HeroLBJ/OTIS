<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title1"
        style="@style/title_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/t_left"
        android:text="连接位置多样"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_desc1"
        style="@style/title_bold"
        android:drawableStart="@drawable/res_bottom"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title1"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="连廊布置多样"
        android:textColor="#999"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/rl_back1"
        android:layout_width="55dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_back_bg_write"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_back1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/t_rigth" />
    </RelativeLayout>

</RelativeLayout>