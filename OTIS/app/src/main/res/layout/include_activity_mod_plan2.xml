        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
