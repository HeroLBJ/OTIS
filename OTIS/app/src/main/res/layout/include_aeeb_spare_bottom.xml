                    android:layout_margin="6dp"
                    android:background="@drawable/shape_health_banner_line" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rl_bottom3"
            android:layout_width="304dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.5dp"
            android:elevation="@dimen/dp_10">

            <View
                android:layout_width="304dp"
                android:layout_height="20.5dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/shape_aeeb_spare_bottom_black"
                android:elevation="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_no3"
                style="@style/title_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
