<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AEEB" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!-- 允许使用transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!--是否覆盖执行，其实可以理解成是否同步执行还是顺序执行-->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/default.TTF</item>
    </style>

    <style name="title_bold" parent="AppTheme.Widget.TextView">
        <item name="fontPath">fonts/titlem.otf</item>
        <item name="android:textColor">@color/black_141A29</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_bold_1" parent="AppTheme.Widget.TextView">
        <item name="fontPath">fonts/titlem.otf</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="aeeb_title" parent="title_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableStart">@drawable/t_left</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title_medium" parent="AppTheme.Widget.TextView">
        <item name="fontPath">fonts/titlem.otf</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FullScreen" parent="Theme.AEEB">
        <item name="android:windowNoTitle">true</item>    <!--无标题-->
        <item name="android:windowFullscreen">true</item>   <!--全屏-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="main_six_title" parent="title_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="health_3_label_eight">
        <item name="android:alpha">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="spare_tree">
        <item name="android:alpha">0.1</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">@drawable/spare_tree</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <declare-styleable name="RadiusCardView">
        <!--        左上圆角大小-->
        <attr name="rcv_topLeftRadius" format="dimension" />
        <!--        右上圆角大小-->
        <attr name="rcv_topRightRadius" format="dimension" />
        <!--        右下圆角大小-->
        <attr name="rcv_bottomRightRadius" format="dimension" />
        <!--        左下圆角大小-->
        <attr name="rcv_bottomLeftRadius" format="dimension" />
    </declare-styleable>

    <style name="mod_splash_rect">
        <item name="android:layout_marginTop">700dp</item>
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">163dp</item>
        <item name="android:background">@drawable/mod_splash_rect</item>
    </style>

    <style name="mod_splash_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <declare-styleable name="TitleView">
        <attr name="title" format="string" />
        <attr name="title_color" format="color" />
        <attr name="margin_left" format="dimension" />
    </declare-styleable>

    <style name="common_title_style" parent="title_bold">
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>